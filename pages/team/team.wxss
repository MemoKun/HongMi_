/* pages/team/team.wxss */

.topBar {
  display: flex;
  width: 100%;
  line-height: 80rpx;
  position: fixed;
  flex-direction: row;
  top: 0;
  background-color: ghostwhite;
  border-bottom: 1px solid #919191;
}

.topTitle {
  flex: auto;
  text-align: center;
  font-weight: bold;
  font-size: 35rpx;
}

.question {
  margin-top: 40px;
}

.layout_horizontal_title {
  margin-top: 50px;
  display: flex;
  flex-direction: row;
}

.type {
  color: rgb(7, 193, 96);
  margin-left: 5px;
  margin-right: 5px;
  font: 25px '微软雅黑';
}

.title {
  margin-left: 5px;
  margin-right: 10px;
  font: 25px '微软雅黑';
  color: #2a2a2a;
  font-weight: bold;
}

/*横向布局  */

.layout_horizontal_info {
  margin-top: 15px;
  display: flex;
  flex-direction: row;
}

.layout_horizontal_user {
  margin-top: 15px;
  display: flex;
  flex-direction: row;
}

.date {
  margin-left: 5px;
  font-size: 13px;
  color: #919191;
}

.read {
  margin-left: 10px;
  font-size: 13px;
  color: #919191;
}

.collect {
  margin-left: 10px;
  font-size: 13px;
  color: #919191;
}

.portrait {
  width: 20px;
  height: 20px;
  margin-right: 5px;
  margin-left: 5px;
  border-radius: 10px;
}

.username {
  color: rgb(78, 168, 241);
  height: 20px;
  margin-right: 5px;
  font-size: 15px;
}

.school {
  color: #919191;
  flex: 1;
  height: 20px;
  margin-left: 5px;
  font-size: 15px;
}

.button_group {
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  margin-left: 50px;
  margin-right: 50px;
  height: 46px;
}

.team_button {
  background-color: #fed612;
  border-radius: 20px;
  font: '微软雅黑';
  font-weight: bold;
  height: 46px;
}

.people {
  font: 26rpx/126rpx '微软雅黑';
  color: #2a2a2a;
  font-weight: bold;
  margin-left: 5px;
  margin-right: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.internal {
  height: 30px;
  background-color: rgb(247, 247, 247);
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
}

.question_content {
  margin: 5px;
  margin-bottom: 15px;
  font-size: 18px;
  font-weight: 400;
}

.quantity {
  margin-left: 10px;
  font: 15px '微软雅黑';
  font-weight: 200;
}

.sort {
  margin-top: 5px;
  font: 15px '微软雅黑';
  font-weight: 200;
  float: right;
  margin-right: 10px;
  color: #919191;
}

.comment_item {
  padding: 10px;
  border-bottom: 1px solid gainsboro;
}

.comment_head {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  /* margin-left: 5px; */
  margin-right: 10px;
}

.comment_info {
  height: 20px;
  width: 20px;
  float: right;
  margin-left: 5px;
  margin-right: 5px;
}

.comment_info_nums {
  font-size: 15px;
}

.comment_username {
  font-size: 15px;
}

.comment_date {
  font-size: 12px;
  width: 300px;
}

.comment_content {
  margin: 10px 5px 10px 55px;
  font-size: 18px;
}

.reply {
  margin-left: 55px;
  margin-right: 5px;
  padding: 5px;
  background-color: rgb(247, 247, 247);
}

.reply_item {
  display: flex;
  flex-direction: row;
}

.reply_user {
  color: rgb(78, 168, 241);
  font-size: 15px;
}

.reply_content {
  font-size: 15px;
}

.comment_bottom {
  height: 50px;
  padding-top: 5px;
  color: #919191;
  font-size: 15px;
  flex: auto;
  text-align: center;
  /* border-top: 1px solid gainsboro; */
}

.comment {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 8px 0 8px 13px;
  background-color: #fff;
  font-size: 12px;
  z-index: 999;
  border-top: 1px solid gainsboro;
}

.comment .text {
  width: 250px;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  margin-bottom: 4px;
  margin-left: 10px;
  padding: 3px 0;
  border: 1px solid gainsboro;
  border-radius: 10px;
}

.comment_area {
  display: flex;
  flex-direction: column;
}

.comment_icon {
  height: 30px;
  width: 30px;
  margin-right: 5px;
}
